{
	"name": "dustinruetz.com",
	"version": "0.0.0-semantically-released",
	"description": "Dustin Ruetz's website.",
	"scripts": {
		"prebuild": "npm run clean/www",
		"build": "webpack --config ./config/webpack.production.js",
		"check": "npm-run-all2 --parallel check/*",
		"check/format": "npm run format -- --check ./",
		"check/lint/js-ts": "npm run lint/js-ts -- ./",
		"check/lint/styles": "npm run lint/styles -- '**/*.{css,scss}'",
		"clean": "npm-run-all2 --parallel clean/*",
		"clean/caches": "jest --clear-cache && rimraf .caches/",
		"clean/deps": "npx rimraf ./node_modules/ ./package-lock.json",
		"clean/www": "rimraf ./www/",
		"// dev-1": "Use Nodemon to operate/restart both development servers.",
		"// dev-2": "Note that the single ampersand (&) runs the scripts in parallel (works on macOS but not Windows).",
		"dev": "nodemon --config ./config/nodemon.json --exec \"npm run dev/local & npm run dev/network\"",
		"dev/local": "webpack serve --config ./config/webpack.dev-local.js",
		"dev/network": "webpack serve --config ./config/webpack.dev-network.js",
		"format": "web-devdeps format",
		"fix": "npm-run-all2 --parallel fix/*",
		"fix/format": "npm run format -- --write ./",
		"fix/lint/js-ts": "npm run lint/js-ts -- --fix ./",
		"fix/lint/styles": "npm run lint/styles -- --fix '**/*.{css,scss}'",
		"githooks/commit-msg": "web-devdeps githooks/commit-msg",
		"githooks/pre-commit": "web-devdeps githooks/pre-commit",
		"githooks/pre-push": "npm run validate",
		"init": "git config core.hooksPath ./.githooks/ && npm install && npm run validate",
		"lint/js-ts": "web-devdeps lint/js-ts",
		"lint/styles": "web-devdeps lint/styles",
		"test/unit": "web-devdeps test/unit",
		"test/unit/coverage": "npm run test/unit -- --coverage",
		"test/unit/coverage-watch-all": "npm run test/unit/coverage -- --watch-all",
		"test/unit/watch": "npm run test/unit/coverage -- --watch",
		"validate": "npm-run-all2 --sequential build check test/unit"
	},
	"keywords": [],
	"author": "Dustin Ruetz",
	"license": "MIT",
	"engines": {
		"node": ">= 22",
		"npm": ">= 10"
	},
	"repository": {
		"url": "git+ssh://git@github.com:dustin-ruetz/dustinruetz.com.git"
	},
	"devDependencies": {
		"copy-webpack-plugin": "12.0.2",
		"css-loader": "7.1.2",
		"html-webpack-plugin": "5.6.3",
		"image-minimizer-webpack-plugin": "4.1.3",
		"mini-css-extract-plugin": "2.9.2",
		"nodemon": "3.1.9",
		"pug": "3.0.3",
		"pug-loader": "github:dustin-ruetz/pug-loader",
		"sass": "1.83.1",
		"sass-loader": "16.0.4",
		"sharp": "0.33.5",
		"web-devdeps": "1.1.1",
		"webpack": "5.97.1",
		"webpack-cli": "6.0.1",
		"webpack-dev-server": "5.2.0",
		"webpack-merge": "6.0.1"
	}
}
